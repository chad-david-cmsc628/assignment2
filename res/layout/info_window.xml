<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView
	    android:layout_width="match_parent"
        android:layout_height="20dp"     
        android:id="@+id/userActivityView"
        android:gravity="center"
	    />
	
	<TextView
	    android:layout_width="match_parent"
        android:layout_height="20dp"     
        android:id="@+id/userLocationView"
        android:gravity="center"
	    />
	
	<TextView
	    android:layout_width="match_parent"
        android:layout_height="20dp"     
        android:id="@+id/deviceOrientationView"
        android:gravity="center"
	    />
	
	<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" 
	    	android:id="@+id/locationDataContainer">
	    		
		<LinearLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:id="@+id/longLatContainer" >
	    	
	   		<TextView
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"     
		        android:id="@+id/latitudeView"
		        android:gravity="center"
		    />
	   		
	   		<TextView
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"     
		        android:id="@+id/longitudeView"
		        android:gravity="center"
		    />
		</LinearLayout>
		
		<LinearLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:id="@+id/accelDataContainer">
	    	
	   		<TextView
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"     
		        android:id="@+id/xyzLabelView"
		        android:gravity="center"
		    />
	   		
	   		<TextView
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"     
		        android:id="@+id/xyzView"
		        android:gravity="center"
		    />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>